@import "_var_and_mixins"

body 
  margin: 0
  padding: 0
  box-sizing: border-box
  background-color: main-color-background
  background-image: url("../images/bg-mobile.png")
  background-repeat: no-repeat;
html 
  font-family: font 
  font-size: 62.5%
.container
  width: 90%
  margin: 0 auto

.main__card-one
  height: 200px
  margin-top: 125px
  background-color: second-color-background
  border-radius: 10px 100px 10px 10px
  .main__logo
    .logo
      margin-top: 40px
  .main__icons
    display: flex
    margin-top: 30px
    &-container
      width: 50px
      height: 50px
      margin: 0 15px 0 0
      text-align: center
      line-height: 65px
      background-color: #0C122C
      border-radius: 10px
    &-container:first-child
      margin-left: 40px
    &-container:last-child
      line-height: 60px

