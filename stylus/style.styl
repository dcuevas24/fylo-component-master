@import "_var_and_mixins"

body 
  margin: 0
  padding: 0
  box-sizing: border-box
  background-color: main-color-background
  background-image: url("../images/bg-mobile.png")
  background-repeat: no-repeat;
html 
  font-family: font 
  font-size: 62.5%
.container
  width: 90%
  margin: 0 auto

.main__card-one
  height: 200px
  margin-top: 125px
  background-color: second-color-background
  border-radius: 10px 100px 10px 10px
  .main__logo
    .logo
      margin-top: 40px
  .main__icons
    display: flex
    margin-top: 30px
    &-container
      width: 50px
      height: 50px
      margin: 0 15px 0 0
      text-align: center
      line-height: 65px
      background-color: #0C122C
      border-radius: 10px
    &-container:first-child
      margin-left: 40px
    &-container:last-child
      line-height: 60px

.main__card-two
  position: relative
  width: 100%
  height: 160px
  margin-top: 20px
  padding-top: 25px
  text-align: center
  font-size: 1.5rem
  color: color-font
  background-color: second-color-background
  border-radius: 10px
  .main__space-bar
    position: relative
    width: 90%
    height: 25px
    margin: 0 auto
    background-color: main-color-background
    border-radius: 50px
    &-fill
      position: absolute
      top: 3px;
      left: 4px;
      width: 75%
      height: 19px
      background: linear-gradient(90deg, rgba(255,163,153,1) 0%, rgba(255,77,151,1) 100%)
      border-radius: 50px
      .main__circle
        position: absolute
        top: 2px
        left: calc(100% - 18px)
        width: 15px
        height: 15px
        background-color: white
        border-radius: 50%
  .main__space
    display: flex
    justify-content: space-between
    padding: 0 5%
    font-weight: 900
  .main__float-card
    position: absolute
    top: calc(100% - 35px)
    left: calc(50% - 87.5px)
    display: flex
    justify-content: center
    align-items: center
    width: 175px
    height: 70px
    font-weight: 900
    color font-grey
    background-color: white
    border-radius: 10px
    .big
      margin-right: 12px
      font-size: 3.6rem
      color: main-color-background
