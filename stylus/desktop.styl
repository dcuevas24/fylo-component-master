.container
  width: 920px

.main__card-one
  width: 315px

.main__card-two
  width: 570px
  height: 140px
  margin-top: 40px
  text-align: left
  .main__text
    padding-left: 25px
  .main__float-card
    top: -25%
    left: calc(100% - 215px)
    border-bottom-right-radius: 0
    &:after
      content: ""
      position: absolute
      top: 95%
      left: calc(100% - 30px)
      display: block
      width: 0
      height: 0
      border-right: 15px solid white
      border-top: 15px solid white
      border-left: 15px solid transparent
      border-bottom: 15px solid transparent